<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/setting_list_item_switch_title"
        android:text="Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/list_item_title_text_size"
        android:padding="@dimen/list_item_padding"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/setting_list_item_switch_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setting_list_item_switch_title"
        android:singleLine="true"
        android:text="hint"
        android:padding="@dimen/list_item_padding"
        android:textSize="@dimen/list_item_subtitle_text_size" />

    <Switch
        android:id="@+id/list_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/setting_list_item_switch_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

</RelativeLayout>