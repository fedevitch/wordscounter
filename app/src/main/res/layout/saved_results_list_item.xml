<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/saved_results_list_item_title"
        android:text="Saved result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:padding="@dimen/list_item_padding"
        android:textSize="@dimen/list_item_title_text_size"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/saved_results_list_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/saved_results_list_item_title"
        android:singleLine="true"
        android:text="hint"
        android:padding="@dimen/list_item_padding"
        android:textSize="@dimen/list_item_subtitle_text_size" />

    <TextView
        android:id="@+id/saved_results_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/saved_results_list_item_subtitle"
        android:singleLine="true"
        android:text="created_at"
        android:padding="@dimen/list_item_padding"
        android:textSize="@dimen/list_item_subtitle_text_size" />

    <Button
        android:id="@+id/saved_results_list_item_remove_button"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/saved_results_list_item_subtitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:background="@drawable/ic_delete_black" />

</RelativeLayout>